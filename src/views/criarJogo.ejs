<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <!--Titulo da Página-->
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <h1><span class="badge rounded-pill bg-success titulo">Crie um Jogo</span></h1>
                    </div>
                </div>
               
                <div class="fundo">
                    <!--Formulário-->
                    <div class="errors">
                       
                        <% if(typeof(errors) != "undefined"){ %> 
                            <h1>gjngkjgnkj</h1>
                            <% Array.from(errors).map(errors => { %>
                                <%= errors.msg %> 
                            <% }); %>
                        <% }; %>
                    </div>
                    <form id="formulario" name="form" action="/jogoCriado" method="POST" enctype="multipart/form-data">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-3 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="cep" id="formGroupExampleInput"
                                        placeholder="CEP">

                                </div>

                                <div class="col-sm-8 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="endereco" id="formGroupExampleInput"
                                        placeholder="Endereço">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="numero" id="formGroupExampleInput"
                                        placeholder="N°">
                                </div>
                                <div class="col-sm-3 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="bairro" id="formGroupExampleInput"
                                        placeholder="Bairro">
                                </div>
                                <div class="col-sm-2 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="estado" id="formGroupExampleInput"
                                        placeholder="UF">
                                </div>
                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="cidade" id="formGroupExampleInput"
                                        placeholder="Cidade">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="data" id="formGroupExampleInput"
                                        placeholder="Data">
                                </div>
                                <div class="col-sm-3 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="hora" id="formGroupExampleInput"
                                        placeholder="Horário">
                                </div>
                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="esporte" id="formGroupExampleInput"
                                        placeholder="Esporte">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-10 campos">
                                    <div id="inputFile" class="campos inputFile icones">
                                        <label>
                                            <ion-icon size="large" name="camera"></ion-icon>
                                        </label>
                                        <input type="file" name="fotoLugar" id="fotoLugar" class="form-control campos"
                                            multiple>
                                    </div>

                                </div>
                            </div>

                            <!--Botão Criar-->
                            <div class="row">
                                <div class="text-center col-sm-10 campos">
                                    <button type="submit" id="criar" value="criar"
                                        class="btn btn-primary botao">Criar</button>
                                    <!--onclick="abrir();"-->
                                </div>
                            </div>
                        </div>
                </div>

                </form>

                </div>
            </main>

            <%- include('./partials/footer') %>
                <%- include('./partials/popUp') %>
    </body>

    </html>