            <video autoplay muted loop src="../video/bg1.mp4"></video>
         </div>
        <div class="cadastro" id="bg-color">
            <!-- div para estilizar o form-->
        <form action="/" method="post" id="form1">
            <h3 class="text-center">Faça login em nossa plataforma.</h3>
            <h3 class="conta text-center">Não possui conta? <a href="/register">Criar conta.</a></h3>
