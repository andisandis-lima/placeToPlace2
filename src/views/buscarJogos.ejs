<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <!--<div class="bg-vd">
        <video autoplay muted loop src="./video/bg1.mp4"></video>
    </div>-->
            <main>

                <!--Titulo da Página-->
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <h1><span class="badge rounded-pill bg-success titulo">Busque Jogos Perto de Você</span></h1>
                    </div>
                </div>


                <div class="fundo">
                    <!--Formulário-->
                    <form id="formulario" name="form" action="/procurarJogos" method="GET">
                        <div class="container">
                            <div class="row">


                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="bairro" id="formGroupExampleInput"
                                        placeholder="Bairro">
                                </div>

                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="cidade" id="cities"
                                        placeholder="Cidade">
                                </div>

                                <div class="col-sm-2 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="estado" placeholder="UF">

                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="data" id="formGroupExampleInput"
                                        placeholder="Data">
                                </div>


                                <div class="col-sm-4 campos">
                                    <label for="formGroupExampleInput"></label>
                                    <input type="text" class="form-control" name="esporte" placeholder="esporte">

                                </div>
                            </div>
                            <!--Botão Buscar-->
                            <div class="text-center">
                                <button type="submit" id="criar" class="btn btn-primary botao">Buscar</button>
                            </div>
                        </div>
                    </form>
                     
                </div>
            </main>

            <%- include('./partials/footer') %>

    </body>

    </html>